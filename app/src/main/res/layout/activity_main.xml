<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <!-- 结果显示框 -->

    <EditText
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="78dp"
        android:cursorVisible="false"
        android:gravity="right"
        android:text="0" />
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 用于显示存储结果 -->
        <TextView
            android:layout_width="65sp"
            android:layout_height="wrap_content"
            android:text="     CUN:"
            />
        <!-- 默认显示字符串0 -->
        <TextView
            android:id="@+id/mem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="0"
            />
    </TableRow>



    <TableLayout
        android:stretchColumns="0,1,2,3"
        android:shrinkColumns="*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableRow>

        <Button
            android:id="@+id/bksp"
            android:layout_width="65sp"
            android:layout_height="65sp"
            android:text="HT"
            />

        <Button
            android:id="@+id/mc"
            android:layout_width="65sp"
            android:layout_height="65dp"
            android:text="QC" />
        <Button
            android:id="@+id/c"
            android:text="C"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />

        <Button
            android:id="@+id/exit"
            android:layout_width="65dp"
            android:layout_height="65sp"
            android:text="exit" />

    </TableRow>
    <TableRow>
        <!-- 对数 -->
        <Button
            android:id="@+id/log"
            android:layout_width="65sp"
            android:layout_height="65dp"
            android:text="log" />
        <!-- 自然对数 -->
        <Button
            android:id="@+id/ln"
            android:layout_width="65sp"
            android:layout_height="65dp"
            android:text="ln" />
        <!-- 开方 -->
        <Button
            android:id="@+id/sqrt"
            android:layout_width="65sp"
            android:layout_height="65dp"
            android:text="√" />
        <!-- 乘方 -->
        <Button
            android:id="@+id/square"
            android:layout_width="65sp"
            android:layout_height="65dp"
            android:text="^" />



    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 数字7 -->
        <Button
            android:id="@+id/seven"
            android:text="7"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />
        <!-- 数字8 -->
        <Button
            android:id="@+id/eight"
            android:text="8"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />
        <!-- 数字9 -->
        <Button
            android:id="@+id/nine"
            android:text="9"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />
        <!-- 除号 -->
        <Button
            android:id="@+id/divide"
            android:layout_width="65sp"
            android:layout_height="65dp"
            android:text="÷" />

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 数字4 -->
        <Button
            android:id="@+id/four"
            android:text="4"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />
        <!-- 数字5 -->
        <Button
            android:id="@+id/five"
            android:text="5"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />
        <!-- 数字6 -->
        <Button
            android:id="@+id/six"
            android:text="6"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />
        <!-- 乘号 -->
        <Button
            android:id="@+id/mul"
            android:text="×"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- 数字1 -->
        <Button
            android:id="@+id/one"
            android:text="1"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />
        <!-- 数字2 -->
        <Button
            android:id="@+id/two"
            android:text="2"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />
        <!-- 数字3 -->
        <Button
            android:id="@+id/three"
            android:text="3"
            android:layout_width="65sp"
            android:layout_height="65dp"
            />
        <!-- 减号 -->
        <Button
            android:id="@+id/sub"
            android:layout_width="65sp"
            android:layout_height="65dp"
            android:text="-" />

    </TableRow>

<TableRow
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <!-- 数字0 -->
    <Button
        android:id="@+id/zero"
        android:layout_width="65sp"
        android:layout_height="65dp"
        android:text="0" />
    <!-- 小数点 -->
    <Button
        android:id="@+id/dot"
        android:layout_width="65sp"
        android:layout_height="65dp"
        android:text="." />
    <!-- 等号 -->
    <Button
        android:id="@+id/equal"
        android:layout_width="65sp"
        android:layout_height="65dp"
        android:text="=" />
    <!-- 加号 -->
    <Button
        android:id="@+id/add"
        android:layout_width="65sp"
        android:layout_height="65dp"
        android:text="+" />

</TableRow>
</TableLayout>
<TableRow
android:layout_width="fill_parent"
android:layout_height="wrap_content"
    >
<!-- 用于提示，告诉用户如何使用计算器的一些功能等 -->
    <TextView
        android:id="@+id/T"
        android:layout_width="195dp"
        android:layout_height="65dp"
        android:text="试作一号机" />


</TableRow>

    </LinearLayout>